Pregunta 3
**********

package org.example;

public class Pregunta3 {
    public static void main(String[] args) {

        System.out.println(calcularPrecioFinal(1999));

    }

    public static double calcularPrecioFinal(double precioinicial){
        double preciofinal = 0;


        if (precioinicial < 2000) {
            preciofinal = precioinicial*0.18+precioinicial;
        }
        else {
            preciofinal = precioinicial*0.21+precioinicial;
        }
        return preciofinal;
    }
}
